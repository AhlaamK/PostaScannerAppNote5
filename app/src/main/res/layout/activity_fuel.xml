<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eb7a02">


    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Barcode Value"
        android:id="@+id/textView13"
        android:layout_gravity="left|top"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/textbarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:text=""
        android:textStyle="bold" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take pic of odometer"
        android:id="@+id/button1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:id="@+id/imageodo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the odometer value"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:layout_marginTop="140dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/odometertxt"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
      >
    </EditText>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="take pic of receipt"
        android:id="@+id/recieptbutton"
        android:layout_marginTop="200dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:id="@+id/imagereceipt"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
       android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Enter receipt number"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/recptnotxt"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="185dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="Enter Amount"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/recptamount"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true" />

    <Button
        android:id="@+id/proceed"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="60dp"
       android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"
        android:text="proceed" />



</FrameLayout>
