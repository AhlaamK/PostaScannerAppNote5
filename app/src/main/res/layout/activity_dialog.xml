<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your action"
        android:id="@+id/textchoose"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Finish Delivery"
        android:id="@+id/btncancel"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_gravity="left|bottom"
        android:background="#eb7a02"
        android:textSize="12sp"
        android:layout_marginTop="34dp"
        android:visibility="gone"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Confirm"
        android:id="@+id/confirmaction"
        android:layout_below="@+id/horizontalScrollView3"
        android:layout_gravity="bottom|right"
        android:background="#eb7a02"
        android:textSize="12sp"
        android:layout_alignTop="@+id/btncancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="PICKUP"
        android:id="@+id/pckupaction"
        android:background="#eb7a02"
        android:textSize="12sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="DELIVERY"
        android:id="@+id/deliveryaction"
        android:layout_gravity="bottom|right"
        android:background="#eb7a02"
        android:textSize="12sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/pckupaction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Scan Awb  you want to deliver"
        android:padding="5dp"
        android:textColor="#8A0808"
        android:textStyle="bold"
       android:layout_centerHorizontal="true"
        android:id="@+id/textalert"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AWB No."
        android:padding="5dp"
        android:textColor="#8A0808"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/textalert"
        android:id="@+id/textView1"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/textView1"
        android:id="@+id/AWBTXT" />


  <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/horizontalScrollView3"
      android:layout_gravity="center_horizontal|top"
      android:layout_below="@+id/textalert"
      >




              <ScrollView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/scrollView1"
                  android:layout_marginTop="5dp"
                  android:layout_gravity="center_horizontal"
                  >

                  <TableLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="center_horizontal"
                      android:id="@+id/resulttabledialog"/>

              </ScrollView>

  </HorizontalScrollView>
