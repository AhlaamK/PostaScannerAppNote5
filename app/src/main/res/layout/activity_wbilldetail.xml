<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eb7a02"
    android:focusableInTouchMode="true">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Back"
        android:id="@+id/btnbck"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WayBill:"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consignee:"
        android:id="@+id/textView3"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company:"
        android:id="@+id/textView5"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Address:"
    android:id="@+id/textView7"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="25dp"
    android:layout_gravity="left" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DelDate:"
        android:id="@+id/textView14"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DelTime:"
        android:id="@+id/textView15"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="left" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:id="@+id/textwbill"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="105dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textconsignee"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="105dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textcompany"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="105dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textaddr"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="105dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textdeldate"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="105dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textdeltime"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="105dp"/>

</FrameLayout>
